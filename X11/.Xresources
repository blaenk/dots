URxvt.internalBorder: 1
URxvt.geometry: 100x25
! make tput bold actually be bold font, not just different color
URxvt.intensityStyles: false
URxvt.urgentOnBell: true
URxvt.saveLines: 1000
URxvt.font: xft:DejaVu Sans Mono:size=10
URxvt.boldFont: xft:DejaVu Sans Mono:bold:size=10
URxvt.perl-ext-common: default,vtwheel,clipboard,keyboard-select,url-select

! browser
URxvt.url-launcher: /usr/bin/chromium
URxvt.matcher.button: 1

! keyboard select
URxvt.keysym.M-i: perl:keyboard-select:activate

! url select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/chromium
URxvt.url-select.button: 1

! meta copy (like mac)
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.clipboard.autocopy: true
URxvt.clipboard.copycmd: xsel -ib
URxvt.clipboard.pastecmd: xsel -ob

URxvt.scrollBar: false
URxvt.scrollBar_right: true
URxvt.scrollstyle: plain

URxvt.scrollTtyOutput: false
URxvt.scrollTtyKeypress: true
URxvt.scrollWithBuffer: true

URxvt.iso14755: false
URxvt.iso14755_52: false

URxvt*background:              #fdf6e3
URxvt*foreground:              #657b83
URxvt*cursorColor:             #2aa198
URxvt*pointerColorBackground:  #93a1a1
URxvt*pointerColorForeground:  #586e75

