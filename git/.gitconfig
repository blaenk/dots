[include]
path = .gitconfig.local

[user]
name = Jorge Israel Pe√±a
email = jorge.israel.p@gmail.com

[core]
editor = vim
pager = less -+$LESS -FRX

[status]
submoduleSummary = true

[alias]
  au = add -u
  br = branch
  bri = branch -vv
  bs = bisect
  ci = commit -v
  cl = clone
  co = checkout
  df = diff
  dfw = diff --word-diff
  dfc = diff --cached
  dfcw = diff --cached --word-diff
  dft = difftool
  dftc = difftool --cached
  gr = grep --break --heading --line-number
  lg = log --graph --oneline --format='%C(green)%h%C(auto)%d%Creset %C(magenta)%aN%Creset %s %C(yellow)%cr%Creset'
  mrg = merge
  re = remote
  rb = rebase
  rs = reset
  rh = reset --hard
  sb = status -sb
  sh = stash
  sm = submodule
  st = status
  vs = !gitx --all
  ut = !GIT_COMMITTER_DATE=\"$(date)\" git commit --amend --date=\"$(date)\"

[color]
  ui = true
  branch = auto
  diff = auto
  grep = auto

[diff]
  tool = vimdiff
  submodule = log

[difftool]
  prompt = false

[push]
  default = simple

[grep]
  extendRegexp = true
  lineNumber = true
